{
  "name": "",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "watch": {
    "webpack": "src/js/**",
    "html": {
      "patterns": [
        "src/index.html",
        "script/makehtml.js"
      ],
      "extensions": "html,js"
    },
    "css": {
      "patterns": [
        "src/css/**"
      ],
      "extensions": "css"
    }
  },
  "scripts": {
    "start": "http-server",
    "reload": "reload -b -d build/web",
    "build": "npm-run-all --parallel webpack html css",
    "webpack": "webpack || exit 1",
    "html": "node script/makehtml.js --title='{{title}}' --path={{path}}",
    "css": "mkdir -p build/web/css/ && rsync -a --delete src/css/ build/web/css/",
    "clean": "rm -rf build/*",
    "watch": "npm-watch",
    "gif": "script/gif-gen.sh",
    "video": "script/video-gen.sh",
    "preview": "node build/save-frames.bundle.js --width=1200 --height=630 --single_frame --out=preview.png"
  },
  "husky": {
    "hooks": {
      "post-commit": "npm run gif >/dev/null 2>&1 & "
    }
  },
  "author": "Jezzamon",
  "license": "ISC",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.5",
    "babel-preset-env": "^1.7.0",
    "canvas": "^2.6.1",
    "command-line-args": "^5.1.1",
    "http-server": "^0.12.1",
    "husky": "^1.3.1",
    "mkdirp": "^0.5.1",
    "mustache": "^3.2.1",
    "npm-run-all": "^4.1.5",
    "npm-watch": "^0.3.0",
    "reload": "^2.4.0",
    "single-line-log": "^1.1.2",
    "string-format": "^2.0.0",
    "webpack": "^4.41.6",
    "webpack-cli": "^3.3.11",
    "webpack-node-externals": "^1.7.2"
  },
  "dependencies": {}
}
